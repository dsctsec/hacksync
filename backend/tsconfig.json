{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*", "src/**/*.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
